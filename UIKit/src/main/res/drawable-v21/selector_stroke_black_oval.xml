<?xml version="1.0" encoding="utf-8"?><!-- ripple 是5.0才出现的新标签-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_ui_kit_touch_ripple"><!-- 点击出现的水波纹的颜色 -->
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />
                    <solid android:color="@color/color_transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_black" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="50dp" />
                    <solid android:color="@color/color_transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/grey_ccc" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>