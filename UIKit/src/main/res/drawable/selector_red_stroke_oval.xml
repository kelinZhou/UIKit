<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_enabled="true"  android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/color_white" />
            <stroke android:width="1dp" android:color="@color/red_ea0000" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/common_window_background" />
            <stroke android:width="1dp" android:color="@color/red_ea0000" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/color_transparent" />
            <stroke android:width="1dp" android:color="@color/grey_F3" />
        </shape>
    </item>
</selector>