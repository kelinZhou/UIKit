<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_enabled="true"  android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/color_transparent" />
            <stroke android:width="1dp" android:color="@color/theme_color" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/theme_color_pressed" />
            <stroke android:width="1dp" android:color="@color/theme_color" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/theme_color_disable" />
            <stroke android:width="2dp" android:color="@color/theme_color" />
        </shape>
    </item>
</selector>